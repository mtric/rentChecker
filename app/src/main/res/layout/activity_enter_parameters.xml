<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enter_Parameters">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:text="@string/filter_for" />

        <EditText
            android:id="@+id/zip_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="15dp"
            android:autofillHints="Zip code and city"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/zip_code_and_city_name"
            android:inputType="text" />
    </LinearLayout>

    <EditText
        android:id="@+id/max_square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="100dp"
        android:autofillHints="Maximum squaremeters"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/maximum_squaremeters"
        android:inputType="number" />

    <EditText
        android:id="@+id/min_square"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="15dp"
        android:autofillHints="Minimum squaremeters"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/minimum_squaremeters"
        android:inputType="number" />

    <EditText
        android:id="@+id/max_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="100dp"
        android:autofillHints="Maximum rent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/maximum_rent"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/min_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="15dp"
        android:autofillHints="Minimum rent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/minimum_rent"
        android:inputType="number"
        />

    <Button
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="240dp"
        android:text="@string/back_to_main" />

</LinearLayout>
